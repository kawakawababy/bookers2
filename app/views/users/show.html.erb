<div>
  <h1>User info</h1>
  <%= @user.name %>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% if @user == current_user %>
    <%= link_to "プロフィール編集", edit_user_path(@user) %>
  <% end %>
</div>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to book.title, book_path(book.id) %>
      </td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
  </tbody>
</table>