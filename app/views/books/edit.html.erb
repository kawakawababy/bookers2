<% if @book.errors.any? %>
  <h1><%= @book.errors.count %>errors prohibited this obj from being saved:</h1>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <div>
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", class: "form-control" %>
        </div>
        <div>
          <label for="inputBody">Opinion</label>
          <%= f.text_area :body, autofocus: true, id:"inputBody", class: "form-control" %>
        </div>
        <div class="row">
        <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book) %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>